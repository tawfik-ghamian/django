{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "startCommand": "celery -A mysite worker --loglevel=info --concurrency=2 --max-tasks-per-child=10 --queues=celery,video_processing",
    "sleepApplication": false,
    "useLegacyStacker": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}